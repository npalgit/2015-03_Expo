    <Style TargetType="{x:Type hdc:ValueIndicator}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type hdc:ValueIndicator}">
                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ObjectiveValueStates">
                                <VisualState x:Name="ObjectiveValueUnchanged" />
                                <VisualState x:Name="ObjectiveValueChanged" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValueModeStates">
                                <VisualState x:Name="LockedMode">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FF996600" />
                                        </ColorAnimationUsingKeyFrames>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FF4B3D23" />
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="FaultedMode">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FFE51400" />
                                        </ColorAnimationUsingKeyFrames>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FF5C302B" />
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="OfflineMode">
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FF1BA1E2" />
                                        </ColorAnimationUsingKeyFrames>
                                        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                                      Storyboard.TargetName="PART_ActualValueIndicator">
                                            <EasingColorKeyFrame KeyTime="0"
                                                                 Value="#FF27424E" />
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="OnlineMode" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SideStates">
                                <VisualState x:Name="UpperSide" />
                                <VisualState x:Name="LowerSide" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="ValidationStates">
                                <VisualState x:Name="Valid" />
                                <VisualState x:Name="InvalidFocused" />
                                <VisualState x:Name="InvalidUnfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Border x:Name="bgBorder" />
                            <DockPanel LastChildFill="True">
                                <Border DockPanel.Dock="Top">
                                    <Grid x:Name="PART_DragDropPanel">

                                        <!--StrokeDashArray="1 0"-->
                                        <ProgressBar x:Name="PART_ActualValueIndicator"
                                                     Style="{DynamicResource ProgressBarStyle1}"
                                                     Maximum="{TemplateBinding Maximum}"
                                                     Minimum="{TemplateBinding Minimum}"
                                                     Orientation="Vertical"
                                                     Value="{Binding OnlineActualValue, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                     Width="Auto"
                                                     Grid.ColumnSpan="1"
                                                     Background="{TemplateBinding Background}"
                                                     Foreground="{TemplateBinding Foreground}" BorderThickness="0" />
                                    </Grid>
                                </Border>
                            </DockPanel>
                            <Border x:Name="pressedBorder"
                                    BorderBrush="Black"
                                    Visibility="Hidden" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsShowTickbar"
                                 Value="True" />
                        <Trigger Property="IsSideIndexEnabled"
                                 Value="True" />
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="SnapsToDevicePixels"
                Value="True" />
        <Setter Property="Width"
                Value="Auto" />
        <Setter Property="Height"
                Value="Auto" />
    </Style>
    <Style TargetType="{x:Type ProgressBar}"
           x:Key="ProgressBarStyle1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            x:Name="border">
                        <Grid>
                            <Rectangle Fill="{TemplateBinding Background}"
                                       x:Name="PART_Track" />
                            <Rectangle Fill="{TemplateBinding Foreground}"
                                       x:Name="PART_Indicator"
                                       HorizontalAlignment="Left" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation"
                                 Value="Vertical">
                            <Setter TargetName="border"
                                    Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="270" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsIndeterminate"
                                 Value="True">
                            <Setter TargetName="PART_Indicator"
                                    Property="Style">
                                <Setter.Value>
                                    <Style TargetType="{x:Type FrameworkElement}">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Stretch" />
                                        <Style.Triggers>
                                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color"
                                                                        To="Transparent"
                                                                        Duration="0:0:0.5"
                                                                        AutoReverse="True"
                                                                        RepeatBehavior="Forever" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
