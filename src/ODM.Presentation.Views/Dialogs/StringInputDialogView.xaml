<UserControl x:Class="PPG.Presentation.Views.Dialogs.StringInputDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hdc="clr-namespace:Hdc.Controls;assembly=Hdc.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <hdc:VirtualKeyboard Message="{Binding Title}"
                             ConfirmCommand="{Binding ConfirmCommand}"
                             CancelCommand="{Binding CancelCommand}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             CurrentText="{Binding CurrentString,Mode=TwoWay}">
        </hdc:VirtualKeyboard>
    </Grid>
</UserControl>
