<Window x:Class="Hdc.Mv.Inspection.Halcon.CoordinateCircleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Report file"
                           Margin="2"
                           Width="100"></TextBlock>
                <TextBox x:Name="ReportFileTextBox"
                         Margin="2"
                         Width="300"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ConfirmButton"
                        Margin="2"
                        Content="Confirm" Click="ConfirmButton_OnClick"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
