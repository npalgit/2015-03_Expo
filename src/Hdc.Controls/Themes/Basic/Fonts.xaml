<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Hdc.Controls">
    <System:Double x:Key="FontSizeTitle">18</System:Double>
    <System:Double x:Key="FontSizeButton">15</System:Double>

    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeHugeKey}">64</System:Double>
    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeExtraLargeKey}">32</System:Double>
    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeLargeKey}">24</System:Double>
    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeMediumKey}">18</System:Double>
    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeSmallKey}">14</System:Double>
    <System:Double x:Key="{x:Static local:HdcFonts.FontSizeTinyKey}">10</System:Double>

    <FontFamily x:Key="FontFamilyTitle">Microsoft YaHei</FontFamily>
    <FontFamily x:Key="{x:Static local:HdcFonts.FontFamilyNormalKey}">Segoe UI</FontFamily>
    <FontFamily x:Key="{x:Static local:HdcFonts.FontFamilyNumberKey}">Segoe UI Mono</FontFamily>
    <FontFamily x:Key="{x:Static local:HdcFonts.FontFamilyMonoKey}">Segoe UI Mono</FontFamily>
    <!--Segoe UI-->
    <!--Segoe UI Mono-->
    <!--Microsoft YaHei-->
</ResourceDictionary>