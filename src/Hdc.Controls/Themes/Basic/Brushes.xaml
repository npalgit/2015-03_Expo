    <!-- Highlight-->
    <SolidColorBrush x:Key="HighlightBrush"
                     Color="#FFEEEFF7" />
    <SolidColorBrush x:Key="HighlightBackgroundBrush"
                     Color="#FF046380" />
    <SolidColorBrush x:Key="HighlightForegroundBrush"
                     Color="#FFEEEFF7" />

    <!-- Pressed -->
    <LinearGradientBrush x:Key="{x:Static local:HdcBrushes.PressedBrushKey}"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#BBB"
                      Offset="0.0" />
        <GradientStop Color="#EEE"
                      Offset="0.1" />
        <GradientStop Color="#EEE"
                      Offset="0.9" />
        <GradientStop Color="#FFF"
                      Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="{x:Static local:HdcBrushes.PressedBorderBrushKey}"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#444"
                      Offset="0.0" />
        <GradientStop Color="#888"
                      Offset="1.0" />
    </LinearGradientBrush>

    <!-- Button -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonBrushKey}"
                     Color="#DDD"></SolidColorBrush>
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonBackgroundBrushKey}"
                     Color="#DDD" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonForegroundBrushKey}"
                     Color="#000" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonBorderBrushKey}"
                     Color="#555" />
    <LinearGradientBrush x:Key="{x:Static local:HdcBrushes.ButtonMouseOverBackgroundBrushKey}"
                         StartPoint="0,0"
                         EndPoint="0,1">
        <GradientStop Color="#eee"
                      Offset="0.0" />
        <GradientStop Color="#aaa"
                      Offset="1.0" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonMouseOverBorderBrushKey}"
                     Color="#FF046380" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonDisabledForegroundBrushKey}"
                     Color="#afff" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonDisabledBackgroundBrushKey}"
                     Color="#ccc" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ButtonDisabledBorderBrushKey}"
                     Color="#FF046380" />
    <LinearGradientBrush x:Key="{x:Static local:HdcBrushes.ButtonPressedBackgroundBrushKey}"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#BBB"
                      Offset="0.0" />
        <GradientStop Color="#EEE"
                      Offset="0.1" />
        <GradientStop Color="#EEE"
                      Offset="0.9" />
        <GradientStop Color="#FFF"
                      Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="{x:Static local:HdcBrushes.ButtonPressedBorderBrushKey}"
                         EndPoint="0,1"
                         StartPoint="0,0">
        <GradientStop Color="#444"
                      Offset="0.0" />
        <GradientStop Color="#888"
                      Offset="1.0" />
    </LinearGradientBrush>

    <!-- Control -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ControlBrushKey}"
                     Color="#EEE" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ControlBackgroundBrushKey}"
                     Color="#EEE" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ControlForegroundBrushKey}"
                     Color="#222" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.ControlBorderBrushKey}"
                     Color="#888" />

    <!-- Window -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.WindowBorderBrushKey}"
                     Color="#888" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.WindowBackgroundBrushKey}"
                     Color="#EEE" />

    <!-- Dialog -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DialogBorderBrushKey}"
                     Color="#EEE" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DialogBackgroundBrushKey}"
                     Color="#EEE" />
    
    <!-- GroupBox -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.GroupBoxHeaderBackgroundBrushKey}"
                     Color="#EEE" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.GroupBoxHeaderForegroundBrushKey}"
                     Color="#222" />

