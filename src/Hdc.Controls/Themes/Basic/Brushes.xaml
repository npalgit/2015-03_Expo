    <!-- Disabled Brushes are used for the Disabled look of each control -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DisabledBrushKey}"
                     Color="#ccc" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DisabledBackgroundBrushKey}"
                     Color="#ccc" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DisabledForegroundBrushKey}"
                     Color="#afff" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.DisabledBorderBrushKey}"
                     Color="#FF046380" />

    <!-- Panel -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PanelBackgroundBrushKey}"
                     Color="{x:StaticExtension SystemColors.ControlColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PanelBorderBrushKey}"
                     Color="#FF046380" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.TitlePanelBackgroundBrushKey}"
                     Color="{x:StaticExtension SystemColors.ControlColor}" />

    <!-- Primary -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PrimaryBrushKey}"
                     Color="#aaFFFFFF" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PrimaryBorderBrushKey}"
                     Color="#555" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PrimaryBackgroundBrushKey}"
                     Color="#aaFFFFFF" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.PrimaryForegroundBrushKey}"
                     Color="#FF046380" />

    <!-- Secondary -->
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.SecondaryBrushKey}"
                     Color="#FF046380" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.SecondaryBorderBrushKey}"
                     Color="#555" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.SecondaryBackgroundBrushKey}"
                     Color="#FF046380" />
    <SolidColorBrush x:Key="{x:Static local:HdcBrushes.SecondaryForegroundBrushKey}"
                     Color="#FFFFFFFF" />
</ResourceDictionary>