<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hdc="http://schemas.hdcrd.com/xaml"
                    xmlns:local="clr-namespace:Hdc.Controls">

    <ItemsPanelTemplate x:Key="{x:Static local:HdcItemsPanelTemplates.HorizontalStackItemsPanelTemplateKey}">
        <StackPanel IsItemsHost="True"
                    Orientation="Horizontal" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="{x:Static local:HdcItemsPanelTemplates.VerticalStackItemsPanelTemplateKey}">
        <StackPanel IsItemsHost="True"
                    Orientation="Vertical" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="{x:Static local:HdcItemsPanelTemplates.GridItemsPanelTemplateKey}">
        <Grid IsItemsHost="True" />
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="{x:Static local:HdcItemsPanelTemplates.UniformGridRows4ItemsPanelTemplateKey}">
        <UniformGrid IsItemsHost="True"
                     Rows="4">
        </UniformGrid>
    </ItemsPanelTemplate>
    <ItemsPanelTemplate x:Key="{x:Static local:HdcItemsPanelTemplates.UniformGridColumns2ItemsPanelTemplateKey}">
        <UniformGrid IsItemsHost="True"
                     Columns="2">
        </UniformGrid>
    </ItemsPanelTemplate>
</ResourceDictionary>